<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenuItems"
        android:layout_width="653dp"
        android:layout_height="770dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="627dp"
        android:layout_marginBottom="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="346dp"
        android:layout_height="633dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="137dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnFoodItem"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="448dp"
        android:text="Boba" />

    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="172dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="654dp"
        android:layout_marginEnd="454dp"
        android:layout_marginBottom="12dp"
        android:text="Place Order" />

    <Button
        android:id="@+id/btnClearOrder"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="11dp"
        android:text="Clear" />

    <Button
        android:id="@+id/btnTable1"
        android:layout_width="148dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="270dp"
        android:text="Table 1" />

    <Button
        android:id="@+id/btnTable2"
        android:layout_width="148dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="115dp"
        android:text="Table 2" />

    <Button
        android:id="@+id/btnSaveOrder"
        android:layout_width="352dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="80dp"
        android:text="Save Current Order" />

</RelativeLayout>